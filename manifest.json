{
  "manifest_version": 3,
  "name": "Jira Estimate Editor",
  "version": "1.0.0",
  "description": "Quickly view and edit story point estimates on Jira pages",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["https://*.atlassian.net/*", "https://*/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://*.atlassian.net/*", "https://*/secure/*", "https://*/browse/*", "https://*/jira/*"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
